#minimal slate. Most keyboard resize/move are done via betterTouchTool
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

#http://thume.ca/howto/2012/11/19/using-slate/
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

alias terminal 'iTerm'
bind esc:cmd focus ${terminal}

alias browser 'Google Chrome'
bind f1:cmd focus ${browser}

layout multiple BEFORE shell '~/bin/assignTo all Adium Twitter LimeChat'
layout multiple 'Adium':REPEAT throw right | move 300;300 300;200 1
layout multiple 'Twitter': throw right | ${lefthalf} 1
layout multiple 'LimeChat': throw right | ${righthalf} 1
layout multiple ${browser}: ${full} 0
layout multiple ${terminal}: ${full} 0

layout single 'Adium':REPEAT move 300;300 300;200 0
layout single 'Twitter': ${lefthalf} 0
layout single 'LimeChat': ${righthalf} 0
layout single ${browser}: ${full} 0
layout single ${terminal}: ${full} 0
layout single BEFORE shell '~/bin/assignTo this Adium Twitter LimeChat'

default multiple count:2
default single count:1

bind 1:cmd;ctrl layout single
bind 2:cmd;ctrl layout multiple
