export PATH=/usr/local/sbin:$HOME/bin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:${JAVA_HOME}/bin:$HOME/.rvm/bin
export MAILPATH=/var/mail/$USER
alias pwdc='pwd | pbcopy'
alias chuck='sudo'
psgrep() {
    ps aux | grep $1 | egrep -v "grep"
}
psgrep-id() {
    ps aux | grep $1 | egrep -v "grep" | awk '{print $2;}'
}
#alias apt-search="aptitude search"
#alias apt-show="aptitude show"
#installed() {
#    apt-search $1 | grep "^i"
#}
alias git="hub"
alias gf='git flow'
export TERM=xterm-256color
#export TERM=screen-256color
export EDITOR=vim
# start tmux session hacking if the hacking session is not active/existing else just bare tmux
if [ "$TMUX" = "" ]; then
    # not if tmux session
    `tmux list-session | grep hacking > /dev/null`
    # check for hacking session
    if [ $? = 0 ]; then
        # tmux hacking found
        `tmux list-session | grep attached | grep hacking > /dev/null`
        if [ $? = 0 ]; then
            # hacking found active create a new session
            tmux -2 new
        else
            # hacking found but not active
            hack
        fi
    else
        # hacking not found
        hack
    fi
fi

